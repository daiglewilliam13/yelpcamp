<%- include("../partials/header") %>

<div class="container show-panel">
	<div class="conatiner">
		<div class="row">
			<div class="col-md-3">
				<p class="lead">YelpCamp</p>
			</div>
			<div class="col-md-9">
				<div class="thumbnail">
					<img class="img-responsive" src="<%= campground.image %>">
					<div class="caption-full">
						<h4 class="float-right">$<%= campground.price%>/Night</h4>
						<h4><%= campground.name %></h4>
						<p><%= campground.description %></p>
						<p>
							Submitted by <em><strong><%= campground.author.username%></em></strong>
						</p>
						<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
						<form id="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
							<button class="btn btn-danger">
								DELETE
							</button>
						</form>
						<% } %>
					</div>
				</div>
				<div class="well">
					<div class="text-right">
						<a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
					<hr>
				</div>
				<div class="container">
					<div class="row">
						<div class="panel panel-default widget"> 
							<div class="panel-heading">
								<span class="glyphicon glyphicon-comment"></span>
								<h3 class="panel-title">
									Recent Comments</h3>
								<span class="label label-info">
									78</span>
							</div>
							<% campground.comments.forEach(function(comment){ %>
							<div class="panel-body">
								<ul class="list-group">
									<li class="list-group-item">
										<div class="row">
											<div class="col-xs-2 col-md-1">
												<img src="http://placehold.it/80" class="img-circle img-responsive" alt="" /></div>
											<div class="col-xs-10 col-md-11">
												<div>
													<a href="http://www.jquery2dotnet.com/2013/10/google-style-login-page-desing-usign.html">
														Google Style Login Page Design Using Bootstrap</a>
													<div class="mic-info">
														By: <a href="#"><%= comment.author.username %></a> on 2 Aug 2013
													</div>
												</div>
												<div class="comment-text">
													<p><%=comment.text%></p>
												</div>
												<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
												<div class="action">
													<a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">
													<button type="button" class="btn btn-primary btn-xs" title="Edit">
														<span class="glyphicon glyphicon-pencil"></span>
													</a>
													</button>
													<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST"></form>
													<button type="button" class="btn btn-danger btn-xs" title="Delete">
														<span class="glyphicon glyphicon-trash"></span>
													</button>
												</form>
												</div>
												<% } %>   
											</div>
										</div>
									</li>
								</ul>
								
							</div>
							<% } %>
					<a href="#" class="btn btn-primary btn-sm btn-block" role="button"><span class="glyphicon glyphicon-refresh"></span> More</a>
						</div>
					</div>
				</div>

					<a href="/campgrounds">Go Back </a>
				</div>
<%- include("../partials/footer") %>
