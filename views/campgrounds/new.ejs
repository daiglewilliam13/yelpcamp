<%- include("../partials/header") %>


<div class="container mt-5">
	<div class="container pt-5">
		<h1 class="pb-3">Add a New Campground</h1>
		<form action="/campgrounds" method="POST">
		<input class="form-control m-2" type="text" placeholder="Campground Name" name="name">
		<input class="form-control m-2" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
		<input class="form-control m-2" type="text" placeholder="image url" name="image">
		<input class="form-control m-2" type="text" placeholder="Address" name="location">
		<textarea class="form-control m-2" type="text" name="description" placeholder="Campground Description...." rows="5"></textarea>
		<button class="btn color-theme-main m-2">Submit!</button>
		</form>

		<p><a href="/">Go Back</a></p>
	</div>
</div>

<%- include("../partials/footer") %>