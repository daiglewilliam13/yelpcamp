<%- include("../partials/header") %>



	<header class="jumbotron">
		<div class="container-fluid container">
		<h1 class="display-4">
		Welcome to YelpCamp!
		</h1>
		<p>
			Find your next adventure....
		</p>
	</header>
	<div class="container">
		<div class="">
			<h3>
				Our most popular campsites!
			</h3>
	</div>	
</div>
	<% campgrounds.forEach(function(campground, index){ %>
			<div class="container py-2">
				<a href="/campgrounds/<%= campground._id %>" class="camp-link">
					<div class="card camp-link box-shadow">
						<div class="card-body">
							<div class="container">
								<div class="row justify-content-center">
									<div class="col-md-3 col-sm-6">
										<div class="thumbnail">
											<img src="<%= campground.image %>">
										</div>
										
									</div>
									<div class="col-md-9 col-sm-6">
										<div class="row">
											<div class="col-sm-6">
												<h6 class="float-left">
												<strong><%=index+1%>. <%= campground.name %></strong>
												</h6>	
											</div>
											<div class="col-sm-6">
												<span class="float-right">
													Rating: <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
												</span>
											</div>
										</div>
										

										 
										
										<p>
											1234 Campground Road
											Somehwere, SO 99845
										</p>
										<div class="row justify-content-center">
											<p class="text-center">
											<%= campground.description %>	
											</p>
										</div>
									</div>
								</div>
							</div>	
						</div>
					</div>
				</a>	
			</div>
	<% }); %>


<p>
	<a href="/">Back to Landing Page</a>
</p>
</div>

<%- include("../partials/footer") %>

