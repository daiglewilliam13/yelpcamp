<%- include("../partials/header") %>


<div class="container">
<header class="jumbotron">
	<h1>
	Welcome to YelpCamp!
	</h1>
	<p>
		These are hand picked from across the world
	</p>
	<p>
		<button class="btn btn-primary btn-large">
			<a href="/campgrounds/new">Add a new campground</a>
		</button>
	</p>
</header>

<div class="row">
	<div class="col-lg-12">
		<h3>
			Our most popular campsites!
		</h3>
	</div>	
</div>
<div class="row text-center" style="display:flex; flex-wrap:wrap;">	
	<% campgrounds.forEach(function(campground){ %>
	<div class="col-12 panel panel-default">
	<div class="panel-heading">
	</div>
		<div class="panel-body">
			<div class="col-md-3 col-sm-6">
				<h4 class="text-capitalize">
					<strong><%= campground.name %></strong>
				</h4>
				<div class="thumbnail">
					<img src="<%= campground.image %>">
				</div>
			</div>
			<div class="col-md-9 col-sm-6 text-center">
				<%= campground.description %>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>	
	</div>
	<% }); %>
</div>

<p>
	<a href="/">Back to Landing Page</a>
</p>
</div>

<%- include("../partials/footer") %>

