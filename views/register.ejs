<%- include("partials/header") %>


<div class="user-auth">
<div class="col container">
	
<div class="row justify-content-center">
	

<div class="card card-login box-shadow">
			<div class="card-header">
				<h3 class="text-shadow">Sign Up for YelpCamp!</h3>
			</div>
			<div class="card-body">
				<form action="/register" method="POST">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="username" name="username" required>
						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="password" name="password" id="pw" required>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="confirm password" id="pwConfirm" required>
					</div>
					<div class="form-group">
						<input type="submit" value="Join YelpCamp!" class="btn login_btn disabled" id="reg-btn">   <span id="valid" class="link-color"></span>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
</div>

<%- include("partials/footer") %>
